<%= label_tag "Available flights" %>

<%= form_tag(new_booking_path, method: :get) do %>

  <% @flights.each do |flight| %>
    <ul>
      <%= radio_button_tag :flight_id, flight.id %>
      <%= """#{flight.origin.name} to
             #{flight.destination.name}. Duration:
             #{flight.duration_in_hours}. Departure:
             #{flight.format_date(flight.start)}""" %>
    </ul>
  <% end %>
  <%= hidden_field_tag :seats, params[:seats] %>
  <ul><%= submit_tag 'Book flight', class: "btn btn-primary" %></ul>
<% end %>
